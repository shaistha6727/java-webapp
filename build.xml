<project name="StaticWebApp" default="build" basedir=".">
    <property name="web" value="web" />
    <property name="build" value="build" />
    <property name="dist" value="dist" />

    <target name="clean">
        <delete dir="${build}" />
        <delete dir="${dist}" />
    </target>

    <target name="build">
        <mkdir dir="${build}" />
        <copy todir="${build}">
            <fileset dir="${web}" />
        </copy>
        <mkdir dir="${dist}" />
        <jar destfile="${dist}/static-app.war" basedir="${build}" />
    </target>
</project>


